<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/settings_fragment">

    <TextView
        android:id="@+id/above_settings_white_space"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="       "
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Settings"
        android:textSize="28sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@id/above_settings_white_space"
        android:layout_centerHorizontal="true"
        android:contentDescription="Settings"
        />

    <TextView
        android:id="@+id/below_settings_white_space"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="       "
        android:textSize="26sp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/settings_title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/sort_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Post Button Theme:"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_below="@id/below_settings_white_space"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radios"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/below_settings_white_space"
        android:layout_toEndOf="@id/sort_title">
        <RadioButton android:id="@+id/purple_radio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Purple"
            android:layout_weight="1"
            />
        <RadioButton android:id="@+id/cyan_radio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Teal"
            android:layout_weight="1"
            />
        <RadioButton android:id="@+id/red_radio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Red"
            android:layout_weight="1"
            />
            <!--android:onClick="onRadioButtonClicked"-->

    </RadioGroup>



</RelativeLayout>